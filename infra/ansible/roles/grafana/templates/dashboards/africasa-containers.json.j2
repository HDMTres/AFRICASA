{
  "dashboard": {
    "id": null,
    "title": "AFRICASA - Container Metrics (cAdvisor)",
    "tags": ["africasa", "containers", "cadvisor", "docker"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "10s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "container",
          "type": "query",
          "query": "label_values(container_last_seen, name)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "datasource": "Prometheus"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Running Containers",
        "type": "stat",
        "targets": [
          {
            "expr": "count(container_last_seen{name=~\"$container\"})",
            "refId": "A",
            "legendFormat": "Active Containers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Container CPU Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\"$container\",name!=\"\"}[5m])) by (name) * 100",
            "refId": "A",
            "legendFormat": "{{ '{{name}}' }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Container Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"$container\",name!=\"\"} / 1024 / 1024",
            "refId": "A",
            "legendFormat": "{{ '{{name}}' }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decbytes",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 512},
                {"color": "red", "value": 1024}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Container Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{name=~\"$container\",name!=\"\"}[5m])) by (name)",
            "refId": "A",
            "legendFormat": "RX {{ '{{name}}' }}"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{name=~\"$container\",name!=\"\"}[5m])) by (name)",
            "refId": "B",
            "legendFormat": "TX {{ '{{name}}' }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "binBps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Container Filesystem Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "container_fs_usage_bytes{name=~\"$container\",name!=\"\"} / 1024 / 1024 / 1024",
            "refId": "A",
            "legendFormat": "{{ '{{name}}' }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decbytes"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ]
  },
  "folderId": null,
  "overwrite": true
}
