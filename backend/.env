# Configuration de la base de données
MONGODB_URI=mongodb://localhost:27017/africasa

# Configuration JWT
JWT_SECRET=africasa_super_secret_jwt_key_32_characters_minimum_2024

# Configuration serveur
PORT=5000
NODE_ENV=development

# Configuration frontend
FRONTEND_URL=http://localhost:3000

# Configuration email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@africasa.com
SKIP_EMAIL_VERIFICATION=true

# Emails de support
SUPPORT_EMAIL=support@africasa.com
ADMIN_EMAIL=admin@africasa.com

# Configuration Redis (pour la mise en cache - optionnel)
REDIS_URL=redis://localhost:6379

# Configuration de fichiers
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Configuration de sécurité
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key

# Configuration 2FA
TOTP_WINDOW=2

# Configuration rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
